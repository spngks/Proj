<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingTop="@dimen/spacing_regular"
    android:paddingBottom="@dimen/spacing_regular"
    android:background="@color/gray_20"
    android:id="@+id/profile_item_row"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <com.makeramen.RoundedImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:border_color="@color/gray_80"
        custom:border_width="2dp"
        custom:is_oval="true"
        android:layout_width="@dimen/list_pic_sq"
        android:layout_height="@dimen/list_pic_sq"
        android:src="@drawable/social_person"
        android:id="@+id/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nick_name"
        android:hint="The Nick name"
        android:layout_toRightOf="@+id/profile_pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:hint="\Gender"
        android:layout_toRightOf="@+id/profile_pic"
        android:layout_below="@+id/nick_name"/>


</RelativeLayout>